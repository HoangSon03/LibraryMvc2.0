@model Library.ViewModel.HistoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BorrowingHistory</h4>
<hr />
<div class="row">
    <div >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width:50%">
                  <label class="control-label">Borrower :</label>
                <select asp-for="BorrowerId" class ="form-control" asp-items="ViewBag.BorrowerId"></select>
            </div>
            <table  class="table">
                <thead>
                    <tr>
                        <th>Checkbox</th>
                        <th>Item </th>
                        <th>Price </th>
                        <th>Quantity </th>
                        <th>Borrower Quantity </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListItem) {
                        <tr>
                            <td>
                                <input type="checkbox" name="ListSelectItem" value="@item.Id"/> 
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                               <input type="number" name="myInput"    />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <input  type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
