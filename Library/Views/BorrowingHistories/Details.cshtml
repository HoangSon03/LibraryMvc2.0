@model Library.Models.BorrowingHistory

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BorrowingHistory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Borrower)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Borrower!.Name)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BorrowDate)
        </dd>

    </dl>
<table class="table">
      <thead>
        <tr>
            <th>Item Title</th>
            <th>Price</th>
            <th>Quantity </th>
            <th>Cost </th>
            <th>Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BorrowingDetails) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Item.Title)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
