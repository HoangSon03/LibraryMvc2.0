@model IEnumerable<Library.Models.BorrowingHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Borrower)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.BorrowDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountItem)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.CountItemQuantity)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Borrower!.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.BorrowDate)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.CountItem)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.CountItemQuantity)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
